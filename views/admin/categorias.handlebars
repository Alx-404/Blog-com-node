

<h2>Nova categoria</h2>
<a href="/admin/categorias/add"><button class="btn btn-success">Criar</button></a>

{{#each categorias}}
 <div class="card">
     <div class="card-body">
         <h4>{{nome}}</h4>
         <small>{{slug}}</small><br>
         <small>{{date}}</small>
         <a href="/admin/categorias/edit/{{_id}}"><br><button class="btn btn-success">Editar</button></a>
        <form action="/admin/categorias/deletar" method="post">
            <input type="hidden" name="id" value={{_id}}>
            <button type="submit" class="btn btn-danger mt-2">Deletar</button>
        </form>
     </div>    
 </div>
 {{else}}

 {{/each}}