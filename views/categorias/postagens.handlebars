{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <hr>
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
        <hr>
        <small>{{date}}</small>
    </div>
</div>

{{else}}
    <h5>Nenhuma postagem...</h5>
{{/each}}